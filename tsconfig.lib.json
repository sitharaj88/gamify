{
    "extends": "./tsconfig.app.json",
    "compilerOptions": {
        "outDir": "./dist",
        "declaration": true,
        "emitDeclarationOnly": true,
        "noEmit": false,
        "allowImportingTsExtensions": false,
        "jsx": "react-jsx"
    },
    "include": [
        "src/components",
        "src/hooks",
        "src/theme",
        "src/index.ts"
    ],
    "exclude": [
        "src/**/*.test.tsx",
        "src/**/*.stories.tsx",
        "src/pages",
        "src/main.tsx"
    ]
}